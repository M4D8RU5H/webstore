@{
    ViewBag.Title = "Koszyk";
}
<div class="subsection">
        Koszyk
</div>

@try{
	@if (Model.products.length == 0)
	{
		<div class="subsection">
			Brak produktów w koszyku
		</div>
	}
	else
	{
		@foreach (var product in Model.products)
		{
			<section id="cart_items">
				<div class="container">
					<div class="breadcrumbs">
						<ol class="breadcrumb">
							<li><a href="#">Strona główna</a></li>
							<li class="active">Koszyk</li>
						</ol>
					</div>
					<div class="table-responsive cart_info">
						<table class="table table-condensed">
							<thead>
								<tr class="cart_menu">
									<td class="image">Przedmiot</td>
									<td class="description"></td>
									<td class="price">Cena</td>
									<td class="quantity">Ilość</td>
									<td class="total">Razem</td>
									<td></td>
								</tr>
							</thead>
							<tbody>
								<tr>
									<tr>
										<td class="cart_product">
											<a href=""><img src=product.ItemImage.URL alt=""></a>
										</td>
										<td class="cart_description">
											<h4><a href="">@product.Item.Name</a></h4>
											<p>ID: @product.Item.Id</p>
										</td>
										<td class="cart_price">
											<p>@product.Item.Price</p>
										</td>
										<td class="cart_quantity">
											<div class="cart_quantity_button">
												<a class="cart_quantity_up" href=""> + </a>
												<input class="cart_quantity_input" type="text" name="quantity" value="1" autocomplete="off" size="2">
												<a class="cart_quantity_down" href=""> - </a>
											</div>
										</td>
										<td class="cart_total">
											<p class="cart_total_price">@product.Item.Price</p>
										</td>
										<td class="cart_delete">
											<a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
										</td>
									</tr>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</section>

			<section id="do_action">
	<div class="container">
		<div class="heading">
			<h3>Co dalej?</h3><!--What would you like to do next?-->
			<p>Wybierz poniżej odpowiednią opcję jeżeli posiadasz kod promocyjny, voucher lub jeżeli chcesz przejść do płatności.</p><!--Choose if you have a discount code or reward points you want to use or would like to estimate your delivery cost.-->
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="chose_area">
					<ul class="user_info">
						<li class="single_field zip-field">
							<label>Kod promocyjny:</label>
							<input id="promo_code" type="text">
						</li>
					</ul>
					<ul class="user_info">
						<li class="single_field zip-field">
							<label>Numer vouchera:</label>
							<input id="voucher" type="text">
						</li>
					</ul>
					<a class="btn btn-default check_out" href="">Przelicz</a>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="total_area">
					<ul>
						<li>Wartość koszyka: <span>@Model.itemsPrice PLN</span></li>
						<li>Koszt wysyłki: <span>@Model.shippingCost PLN</span></li>
						<li>Rabaty i vouchery: <span style="color: red">- @Model.discount PLN</span></li>
						<li>Do zapłaty: <span>@Model.totalCost PLN</span></li>
					</ul>
					@if(Model.totalCost == 0){ //jeżeli mamy voucher na kwotę równą lub mniejszą niż totalCost, nie musimy przechodzić do płatności
						<a class="btn btn-default check_out" href="">Złóż zamówienie</a>
					}
					else{
					<a class="btn btn-default check_out" href="">Przejdź do płatności</a>
					}
				</div>
			</div>
		</div>
	</div>
</section><!--/#do_action-->
		}
	}
}

catch (Exception e)
{
	<div class="subsection">
		Brak produktów w koszyku
	</div>
}<!--/#cart_items-->



