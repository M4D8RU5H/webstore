@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebStore</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/prettyPhoto.css" />
    <link rel="stylesheet" href="~/css/price-range.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />

    <link rel="shortcut icon" href="images/ico/favicon.ico" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/images/ico/apple-touch-icon-57-precomposed.png">
</head>

<body>
    <header id="header">
        <!--header -->
        <!--header_top-->
        <div class="header_top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        Licznik odwiedzin
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="logo pull-left">
                            <a asp-controller="Home" asp-action="Index"><img src="~/images/home/logo.png" alt="" /></a>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="cartitem/cart"><i class="fa fa-shopping-cart"></i> Koszyk</a></li>

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li>
                                        <a asp-controller="ApplicationUser" asp-action="AccountManagment">
                                            <i class="fa fa-user"></i>
                                            Witaj @(UserManager.GetUserName(User).Length < 20 ? UserManager.GetUserName(User) : UserManager.GetUserName(User).Substring(0, 16) + "...")
                                        </a>
                                    </li>

                                    <li data-toggle="collapse" href="#account_options" aria-expanded="false" role="button" aria-controls="account_options">
                                        <a><i class="fa fa-angle-down" style="font-size: 22px"></i></a>
                                    </li>
                                    <li>
                                        <ul id="account_options" class="collapse">
                                            <li><a asp-controller="ApplicationUser" asp-action="AccountManagment">Moje konto</a></li>
                                            <li><a>Historia zamównień</a></li>
                                            <li><a asp-controller="ApplicationUser" asp-action="Logout">Wyloguj</a></li>
                                        </ul>
                                    </li>

                                }
                                else
                                {
                                    <li><a asp-controller="ApplicationUser" asp-action="LoginOrRegister"><i class="fa fa-lock"></i> Logowanie</a></li>
                                }                                                               

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            Kategoria 1 / Podkategoria 2 / <span style="color: #FE980F;">Podkategoria 3</span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="search_box pull-right">
                            <input type="text" placeholder="Szukaj" />
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->
    @RenderBody()


    <footer id="footer">
        <!--Footer-->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="companyinfo">
                            <h2><span>e</span>-shopper</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit,sed do eiusmod tempor</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>           

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left">Copyright © 2013 E-SHOPPER Inc. All rights reserved.</p>
                    <p class="pull-right">Designed by <span><a target="_blank" href="https://www.themeum.com">Themeum</a></span></p>
                </div>
            </div>
        </div>

    </footer><!--/Footer-->

    <script src="~/js/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script src="~/js/bootstrap.min.js"></script>

    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>

    <script src="~/js/price-range.js"></script>

    <script src="~/js/main.js"></script>
    <script src="~/js/image_upload.js"></script>
    <script src="~/js/category_browser.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
